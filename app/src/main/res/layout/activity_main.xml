<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebackground">

    <!-- No Data Layout -->
    <RelativeLayout
        android:id="@+id/idNoDataLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!-- Başlık -->


        <!-- Alt Başlık -->


        <!-- Yüklenme Çubuğu -->

        <RelativeLayout
            android:id="@+id/idRLData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <!-- ImageView -->


            <!-- CardView -->

            <!-- TextInputLayout -->

            <ImageView
                android:id="@+id/idIVImage"
                android:layout_width="223dp"
                android:layout_height="177dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/idIVImage2"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/idIVImage2"
                android:layout_width="223dp"
                android:layout_height="177dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/idIVImage3"
                android:layout_width="223dp"
                android:layout_height="177dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/idIVImage2"
                android:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idTILQuery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:hint="Describe the image you want to see"
                android:padding="5dp"
                android:textColorHint="@color/black"
                app:hintTextColor="@android:color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idEdtQuery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTint="#774df2"
                    android:ems="10"
                    android:imeOptions="actionSend"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/idTVQuery"
                android:layout_width="432dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/idTILQuery"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="169dp"
                android:layout_marginEnd="130dp"
                android:layout_marginBottom="11dp"
                android:padding="6dp"
                android:text="Create wallpaper options"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="16sp" />


        </RelativeLayout>
    </RelativeLayout>

    <!-- Data Layout -->

</RelativeLayout>